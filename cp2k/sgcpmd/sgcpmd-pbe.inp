&GLOBAL
  PROJECT ec
  RUN_TYPE MD
  PRINT_LEVEL LOW
&END GLOBAL

&FORCE_EVAL
  METHOD Quickstep
  &SUBSYS
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND C
      ELEMENT C
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND O
      ELEMENT O
      BASIS_SET DZVP-GTH-PBE
      POTENTIAL GTH-PBE-q6
    &END KIND
    &CELL
      ABC 4.802 4.802 4.802
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME 0001-ec.xyz
    &END TOPOLOGY
  &END SUBSYS
  
  &DFT
    CHARGE 0
    
    BASIS_SET_FILE_NAME  BASIS_SET
    POTENTIAL_FILE_NAME  GTH_POTENTIALS
    
    &QS
      EPS_DEFAULT 1.0E-5
      EXTRAPOLATION ASPC
    &END QS
    
    &MGRID
      NGRIDS 4
      CUTOFF 300
      REL_CUTOFF 60
    &END MGRID
    
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL PBE
          CALCULATE_C9_TERM T
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-7
      MAX_SCF 3000
      &OT T
        PRECONDITIONER FULL_ALL
        ENERGY_GAP 0.002
      &END OT
    &END SCF
    
    &PRINT
      &MOMENTS SILENT
      &END MOMENTS
    &END PRINT
  &END DFT
&END FORCE_EVAL

&MOTION
  &MD
    ENSEMBLE LANGEVIN
    STEPS 100000
    TIMESTEP 1.0
    TEMPERATURE 298

    &LANGEVIN
      GAMMA 0.001
      NOISY_GAMMA 1.0E-4
    &END LANGEVIN

    &THERMOSTAT
      &NOSE
        LENGTH 3
        YOSHIDA 3
        TIMECON 100
        MTS 2
      &END NOSE
    &END THERMOSTAT
  &END MD
  
  &PRINT
    &RESTART
      &EACH
        MD 5
      &END EACH
    &END RESTART
  &END PRINT
&END MOTION